<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Git Repository Monitor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootswatch/yeti/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fa fa-git"></i> Repository Monitor</a>
                </div>
                <ul class="nav navbar-nav">
                    @*<li><a asp-controller="Home" asp-action="Advanced">Advanced</a></li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Days <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="1">1</a></li>
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="3">3</a></li>
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="7">7</a></li>
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="14">14</a></li>
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="30">30</a></li>
                            <li><a asp-controller="Home" asp-action="Index" asp-route-days="90">90</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="https://github.com/mikefourie/GitMonitor" target="_blank"><i class="fa fa-github"></i></a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="main" class="container-fluid">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <environment names="Development">
        <script type="text/javascript" src="~/js/site.js"></script>
    </environment>
    <environment names="Production,Staging">
        <script type="text/javascript" src="~/lib/_app/site.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
