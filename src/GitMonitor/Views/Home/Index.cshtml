@using Microsoft.CodeAnalysis.CSharp.Syntax
@model IEnumerable<GitMonitor.Models.MonitoredItem>
@{
    ViewData["Title"] = "Home";
}
<div class="row">
    <div class="col-md-12">
        <div class="bs-component">
            @if (Model != null)
            {
                @foreach (var monitor in Model)
                {
                    <ul class="nav nav-pills">
                        <li class="active"><a href="#allcommits" data-toggle="tab"><small>All - @monitor.Commits.Count</small></a></li>
                        @foreach (var repo in @monitor.Repositories)
                        {
                            if (repo.CommitCount > 0)
                            {
                                <li><a href="#@repo.Name" data-toggle="tab"><small>@repo.Name - @repo.CommitCount</small></a></li>
                            }
                        }
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="allcommits">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Repository</th>
                                        <th>Date</th>
                                        <th>User</th>
                                        <th>Commit</th>
                                        <th class="col-md-12">Message</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commit in @monitor.Commits)
                                    {
                                        <tr>
                                            <td>@commit.RepositoryName</td>
                                            @if (@commit.CommitterWhen > DateTime.Now.AddDays(-7))
                                            {
                                                <td nowrap>@commit.CommitterWhen.ToString("ddd HH:mm") </td>
                                            }
                                            else
                                            {
                                                <td nowrap>@commit.CommitterWhen.ToString("dd MMM") </td>
                                            }
                                            <td nowrap>@commit.Author</td>
                                            @if (string.IsNullOrWhiteSpace(@commit.CommitUrl))
                                            {
                                                <td>@commit.Sha.Substring(0, 7)</td>
                                            }
                                            else
                                            {
                                                <td><a href="@commit.CommitUrl" target="_blank">@commit.Sha.Substring(0, 7)</a></td>
                                            }
                                            <td>@commit.Message</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @foreach (var mp in @monitor.Repositories)
                        {
                            if (mp.CommitCount > 0)
                            {
                                <div class="tab-pane fade" id="@mp.Name">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>User</th>
                                                <th>Commit</th>
                                                <th class="col-md-12">Message</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var commit in @monitor.Commits)
                                            {
                                                if (@mp.Name == @commit.RepositoryName)
                                                {
                                                    <tr>
                                                        @if (@commit.CommitterWhen > DateTime.Now.AddDays(-7))
                                                        {
                                                            <td nowrap>@commit.CommitterWhen.ToString("ddd HH:mm") </td>
                                                        }
                                                        else
                                                        {
                                                            <td nowrap>@commit.CommitterWhen.ToString("dd MMM") </td>
                                                        }
                                                        <td nowrap>@commit.Author</td>
                                                        @if (string.IsNullOrWhiteSpace(@commit.CommitUrl))
                                                        {
                                                            <td>@commit.Sha.Substring(0, 7)</td>
                                                        }
                                                        else
                                                        {
                                                            <td><a href="@commit.CommitUrl" target="_blank">@commit.Sha.Substring(0, 7)</a></td>
                                                        }
                                                        <td>@commit.Message</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>                            }
                        }
                    </div>
                }
            }

        </div>
    </div>
</div>
